##############################
# File generated with ALC_EQCM
##############################
 
##### Global definitions
&GLOBAL
  PROJECT   model
  RUN_TYPE   MD
  PRINT_LEVEL  MEDIUM
  WALLTIME     300000
&END GLOBAL
 
##### Settings for DFT, SYSTEM and IONS directives
&FORCE_EVAL
  METHOD  Quickstep
   
  ######################
  ### DFT directives ###
  ######################
  &DFT
    UKS  .True.  # Spin-polarised calculation
    PLUS_U_METHOD   MULLIKEN    # DFT+U method with Mulliken charges
 
    #==== Potential and Basis
    BASIS_SET_FILE_NAME  BASIS_SET
    POTENTIAL_FILE_NAME  GTH_POTENTIALS
 
    #==== Self-consistency
    &QS
      EPS_DEFAULT 0.367E-08
      METHOD  GPW
    &END QS
     
    #==== Exchange and correlation + "vdw-df2-b86r" dispersion corrections
    &XC
      &XC_FUNCTIONAL
        ### vdW-DF2-b86r non-local corrections [I. Hamada. Phys. Rev. B 89, 121103 (2014)]
        # 1) Revised Becke 86 with modified gradient correction (for exchange)
        &GGA_X_B86_R
        &END GGA_X_B86_R
        # 2) Perdew-Wang 92 (PW92), only the correlation part [J. P. Perdew and Y. Wang. Phys. Rev. B, 45:13244â€“13249, Jun 1992]
        &PW92
        &END PW92
      &END XC_FUNCTIONAL
      &VDW_POTENTIAL
        DISPERSION_FUNCTIONAL  NON_LOCAL
        &NON_LOCAL
          TYPE LMKLL
          KERNEL_FILE_NAME  vdW_kernel_table.dat
          CUTOFF 50
        &END NON_LOCAL
      &END VDW_POTENTIAL
    &END XC
    #Tricks to speed up the computation of the XC potential (only if you know what you are doing)
    #&XC_GRID
    #&END XC_GRID
     
    #==== Settings for the SCF process
    &SCF
      SCF_GUESS   ATOMIC
      EPS_SCF   0.367E-06
      MAX_SCF   100
      #== Diagonalisation
      ADDED_MOS  200
      &DIAGONALIZATION
        ALGORITHM  STANDARD
      &END DIAGONALIZATION
      #== Smearing
      &SMEAR
        METHOD  FERMI_DIRAC
        ELECTRONIC_TEMPERATURE   2320.90500
      &END SMEAR
      #== Mixing
      &MIXING
        METHOD BROYDEN_MIXING
        ALPHA 0.15
      &END MIXING
    &END SCF
     
    #==== Settings for multigrid information
    &MGRID
      NGRIDS    4
      CUTOFF     400.000
      REL_CUTOFF      66.667
     &END MGRID
     
    #==== Poisson resolutor
    &POISSON
      POISSON_SOLVER  ANALYTIC
      PERIODIC  XY
    &END POISSON
 
  &END DFT
   
  #########################
  ### SYSTEM directives ###
  #########################
  &SUBSYS
   
    #==== Simulation cell
    &CELL
      PERIODIC XY
      SYMMETRY  NONE
      A   -16.800000    0.000000    0.000000
      B     0.000000  -16.800000    0.000000
      C     0.000000    0.000000   55.290000
    &END CELL
     
    #==== Topology
    &TOPOLOGY
      COORD_FILE_NAME    SAMPLE.cp2k
      COORD_FILE_FORMAT  XYZ
    &END TOPOLOGY
     
    #==== Description for each atomic species
    &KIND  Li
      ELEMENT Li
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE
      MAGNETIZATION    0.000
    &END KIND
    &KIND  Mn
      ELEMENT Mn
      BASIS_SET TZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE
      MAGNETIZATION    4.000
      &DFT_PLUS_U
        L  1
        U_minus_J    0.184 # (in Hartree)
      &END DFT_PLUS_U
    &END KIND
    &KIND  O
      ELEMENT O
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE
      MAGNETIZATION    0.000
    &END KIND
    &KIND  Al1
      ELEMENT Al
      BASIS_SET TZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE
      MAGNETIZATION    0.000
    &END KIND
    &KIND  O1
      ELEMENT O
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE
      MAGNETIZATION    0.000
    &END KIND
    &KIND  Al2
      ELEMENT Al
      BASIS_SET TZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE
      MAGNETIZATION    0.000
    &END KIND
    &KIND  O2
      ELEMENT O
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE
      MAGNETIZATION    0.000
    &END KIND
 
  &END SUBSYS
 
&END FORCE_EVAL
 
#######################
### IONS directives ###
#######################
&MOTION
    
  #==== MD settings
  &MD
    ENSEMBLE    nvt
    STEPS        2000
    TIMESTEP        1.00
    TEMPERATURE   300.00
    &THERMOSTAT
      REGION  MASSIVE
      TYPE   NOSE
      &NOSE
        LENGTH   3
        YOSHIDA  3
        MTS      2
        TIMECON    200.00
      &END NOSE
    &END THERMOSTAT
  &END MD
 
&END MOTION
